<UserControl
	x:Class="Vividl.Views.PathSelectionControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:lex="http://wpflocalizeextension.codeplex.com"
	xmlns:local="clr-namespace:Vividl.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:p="clr-namespace:Vividl.Properties"
	d:DesignHeight="50"
	d:DesignWidth="500"
	lex:LocalizeDictionary.DesignCulture="en"
	lex:ResxLocalizationProvider.DefaultAssembly="Vividl"
	lex:ResxLocalizationProvider.DefaultDictionary="Resources"
	mc:Ignorable="d">
	<UserControl.Resources>
		<Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
			<Setter Property="Margin" Value="4" />
		</Style>
	</UserControl.Resources>
	<DockPanel>
		<Button
			Click="Button_Click"
			Content="{lex:Loc PathSelectionControl_Change}"
			DockPanel.Dock="Right" />
		<TextBox
			VerticalContentAlignment="Center"
			IsReadOnly="True"
			Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:PathSelectionControl}}, Path=SelectedPath}" />
	</DockPanel>
</UserControl>
